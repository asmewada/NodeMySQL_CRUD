<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><a href="/"><%= title %></a></h1>
    <h3>Create User:-</h3>
    <form action="/create" method="post">
    	<input type="text" name="id" value="<%= data[0].id %>">
	    <input type="text" name="first_name" value="<%= data[0].first_name %>" placeholder="Please Enter First Name">
	    <input type="text" name="last_name" value="<%= data[0].last_name %>" placeholder="Please Enter Last Name">
	    <input type="text" name="phone" value="<%= data[0].phone %>" placeholder="Please Enter Phone Number">
	    <input type="text" name="email" value="<%= data[0].email %>" placeholder="Please Enter Email Id">
	    <input type="submit">
	</form>

	<h3>Search User By Id:-</h3>
	<form action="/byId" method="get">
		<input type="text" name="id" placeholder="Plese Enter Id">
		<input type="submit">
	</form>

	<h3>User Data:-</h3>
	<table>
		<tr>
			<th>Id</th>
			<th>First name</th>
			<th>Last Name</th>
			<th>Phone</th>
			<th>Email</th>
			<th>Update</th>
			<th>Delete</th>
		</tr>
		<% for(var i=0; i<data.length; i++){ %>
		<tr>
			<td><%= data[i].id %></td>
			<td><%= data[i].first_name %></td>
			<td><%= data[i].last_name %></td>
			<td><%= data[i].phone %></td>
			<td><%= data[i].email %></td>
			<td><a href="/byId/<%= data[i].id %>">View</a></td>
			<td><a href="/delete/<%= data[i].id %>">Delete</a></td>
		</tr>
		<% } %>
	</table>
  </body>
</html>
